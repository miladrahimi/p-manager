{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "listen": "127.0.0.1",
      "port": 3411,
      "protocol": "dokodemo-door",
      "settings": {
        "address": "127.0.0.1"
      },
      "tag": "api"
    },
    {
      "listen": "0.0.0.0",
      "port": 1913,
      "protocol": "shadowsocks",
      "settings": {
        "clients": [
          {
            "password": "password",
            "method": "chacha20-ietf-poly1305",
            "email": "1"
          }
        ],
        "network": "tcp,udp"
      },
      "tag": "shadowsocks"
    }
  ],
  "outbounds": [
    {
      "protocol": "shadowsocks",
      "settings": {
        "servers": [
          {
            "address": "127.0.0.1",
            "port": 1919,
            "method": "chacha20-ietf-poly1305",
            "password": "password"
          }
        ]
      },
      "tag": "shadowsocks"
    },
    {
      "protocol": "shadowsocks",
      "tag": "freedom"
    }
  ],
  "dns": {
    "servers": [
      "8.8.8.8",
      "8.8.4.4",
      "localhost"
    ]
  },
  "stats": {},
  "api": {
    "tag": "api",
    "services": [
      "StatsService"
    ]
  },
  "policy": {
    "levels": {
      "0": {
        "statsUserDownlink": true,
        "statsUserUplink": true
      }
    },
    "system": {
      "statsInboundDownlink": true,
      "statsInboundUplink": true,
      "statsOutboundDownlink": true,
      "statsOutboundUplink": true
    }
  },
  "routing": {
    "domainStrategy": "AsIs",
    "domainMatcher": "hybrid",
    "strategy": "rules",
    "settings": {
      "rules": [
        {
          "inboundTag": [
            "api"
          ],
          "outboundTag": "api",
          "type": "field"
        },
        {
          "outboundTag": "direct",
          "type": "field",
          "ip": [
            "geoip:private"
          ]
        },
        {
          "outboundTag": "freedom",
          "type": "field",
          "domain": [
            "regexp:.*\\.ir$"
          ]
        }
      ]
    }
  }
}